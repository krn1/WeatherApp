<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_material</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Weather.HeadText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">21.4sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Weather.TempText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23.4sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Weather.TempText.Item" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20.4sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
